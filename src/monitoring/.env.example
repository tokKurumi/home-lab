# Monitoring Stack Environment Variables
# Copy this file to .env and customize as needed

################################################################################
# Storage Configuration
# Default: Docker-managed named volumes (grafana-data, prometheus-data)
# Bind-mount: Set these variables to store data on specific paths
################################################################################

# Path for Grafana data (default: ./monitoring/grafana/data)
# Examples:
#   ./monitoring/grafana/data         (relative path)
#   /mnt/nas/monitoring/grafana/data  (NAS mount)
#   /data/grafana                     (external drive)
HOST_GRAFANA_DATA=./monitoring/grafana/data

# Path for Prometheus data (default: ./monitoring/prometheus/data)
# Examples:
#   ./monitoring/prometheus/data      (relative path)
#   /mnt/nas/monitoring/prometheus/data (NAS mount)
#   /data/prometheus                  (external drive)
HOST_PROMETHEUS_DATA=./monitoring/prometheus/data

################################################################################
# Grafana Configuration
################################################################################

# Admin username (default: admin)
GF_SECURITY_ADMIN_USER=admin

# Admin password (change this! default: admin)
GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana instance name
GF_INSTANCE_NAME=Home Lab Monitoring

# Domain where Grafana is accessible
# Used for links, email notifications, etc.
# GF_SERVER_DOMAIN=grafana.example.com
# GF_SERVER_ROOT_URL=https://grafana.example.com/

# Enable/disable user signup
GF_USERS_ALLOW_SIGN_UP=false

# Default organization role for new users
GF_USERS_AUTO_ASSIGN_ORG_ROLE=Viewer

################################################################################
# Prometheus Configuration
################################################################################

# Scrape interval (how often to collect metrics)
# Format: 15s, 1m, 5m, etc.
PROMETHEUS_SCRAPE_INTERVAL=15s

# Evaluation interval (how often to evaluate alerts)
PROMETHEUS_EVALUATION_INTERVAL=15s

# Metrics retention (how long to keep metrics)
# Format: 15d, 30d, 90d, etc.
PROMETHEUS_RETENTION=15d

################################################################################
# Node Exporter Configuration
################################################################################

# Textfile collectors directory (optional)
# NODE_EXPORTER_TEXTFILE_DIR=/var/lib/node_exporter/textfile_collector

################################################################################
# Container Names (internal DNS resolution)
################################################################################

# These are used for inter-container communication
# Usually no need to change these
GRAFANA_HOST=grafana
PROMETHEUS_HOST=prometheus
NODE_EXPORTER_HOST=node_exporter
CADVISOR_HOST=cadvisor
