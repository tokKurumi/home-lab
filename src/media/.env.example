# Media Stack Environment Variables
# Copy this file to .env and customize as needed

################################################################################
# Storage Configuration
# Default: Docker-managed named volumes
# Bind-mount: Set these variables to store data on specific paths
################################################################################

# Wireguard VPN configuration path
HOST_WIREGUARD_CONFIG=./media/configs/wireguard

# qBittorrent configuration path
HOST_QBITTORRENT_CONFIG=./media/configs/qbittorrent

# Prowlarr indexer manager configuration path
HOST_PROWLARR_CONFIG=./media/configs/prowlarr

# Lidarr music manager configuration path
HOST_LIDARR_CONFIG=./media/configs/lidarr

# Radarr movie manager configuration path
HOST_RADARR_CONFIG=./media/configs/radarr

# Sonarr TV series manager configuration path
HOST_SONARR_CONFIG=./media/configs/sonarr

# FileFlows processing paths
HOST_FILEFLOWS_TEMP=./media/configs/fileflows/temp
HOST_FILEFLOWS_DATA=./media/configs/fileflows/data
HOST_FILEFLOWS_COMMON=./media/configs/fileflows/common

# Jellyfin media server configuration path
HOST_JELLYFIN_CONFIG=./media/configs/jellyfin

# Jellyseerr request manager configuration path
HOST_JELLYSEERR_CONFIG=./media/configs/jellyseerr

# Shared media data directory
# All media files (downloads, movies, TV shows, music) stored here
# Examples:
#   ./media/data              (relative path)
#   /mnt/nas/media            (NAS mount)
#   /data/media               (external drive)
HOST_MEDIA_DATA=./media/data

################################################################################
# WireGuard VPN Configuration (Client-side)
################################################################################

# WireGuard server endpoint (provided by VPN provider)
WIREGUARD_ENDPOINT_IP=192.168.0.1
WIREGUARD_ENDPOINT_PORT=51820

# WireGuard keys (generate client-side with: wg genkey | tee privatekey | wg pubkey > publickey)
# Note: Server-side keys and configuration are managed by VPN provider
WIREGUARD_PUBLIC_KEY=your_public_key_here
WIREGUARD_PRIVATE_KEY=your_private_key_here
WIREGUARD_PRESHARED_KEY=your_preshared_key_here

# WireGuard IP addresses (provided by VPN provider)
WIREGUARD_ADDRESSES=10.8.0.1/24

################################################################################
# qBittorrent Configuration
################################################################################

# Web UI port (default: 8080)
# Accessible at: http://localhost:8080 (via Wireguard)
QBIT_WEBUI_PORT=8080

# Torrent connection port (default: 6881)
QBIT_CONNECTION_PORT=6881

################################################################################
# Jellyfin Network Ports
################################################################################

# Jellyfin local network discovery (default: 7359)
JELLYFIN_DISCOVERY_PORT=7359

# Jellyfin DLNA discovery (default: 1900)
JELLYFIN_DLNA_PORT=1900

################################################################################
# Discord Music Bot Configuration
################################################################################

# Discord bot token (create at https://discord.com/developers/applications)
DISCORD_CLIENT_TOKEN=your_discord_bot_token_here

# Jellyfin credentials for music bot
JELLYFIN_AUTHENTICATION_USERNAME=your_jellyfin_username
JELLYFIN_AUTHENTICATION_PASSWORD=your_jellyfin_password

################################################################################
# User & System Configuration
################################################################################

# User ID and Group ID for file permissions
# Find with: id -u and id -g
PUID=1000
PGID=1000

# Timezone (default: Europe/Moscow)
# Examples: UTC, America/New_York, Europe/London, Asia/Tokyo
TZ=Europe/Moscow